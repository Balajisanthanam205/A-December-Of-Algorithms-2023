
#include <stdio.h>
int main()
{
int total=0,n,i,max,x;
printf("Enter total number of Players played:");
scanf("%d",&n);
int runs[n];
printf ("Enter the score of batsman in order:",i);
for (i=0;i<n;i++)
{
scanf("%d",&runs[i]);
}
for (i=0;i<n;i++)
{
total=total+runs[i];
}
max=runs[0];
x=0;
for (i=0;i<n;i++)
{
if (max<runs[i])
{
max=runs[i];
x=i+1;
}
} 
printf ("The total runs scored by the team is:%d\n", total );
printf ("The top scored batsman number is %d:%druns\n",x,max);
return 0;
}
